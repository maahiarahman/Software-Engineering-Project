extends adminlayout

block content
  .container
    h1 Banned User Details

    table(border=1)
      tr
        th ID
        td= user.ban_ID
      tr
        th First Name
        td= user.first_name
      tr
        th Last Name
        td= user.last_name
      tr
        th Email
        td= user.email
      tr
        th Date of Birth
        td= user.date_of_birth
      tr
        th Age
        td= user.age

    form(action='/banned-user/' + user.ban_ID + '/unban', method='POST')
      button(type='submit' onclick="return confirm('Are you sure you want to unban this user?')") âœ… Unban User

    br
    a(href='/admin') Back to Admin Dashboard
