doctype html
html
  head
    title Welcome to Nom Nom
    style.
      body {
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
        background: url('/splash%20bg.jpg') no-repeat center center fixed;
        background-size: cover; /* Ensures the image covers the entire page */
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .splash-container {
        text-align: center;
        background-color: rgba(255, 255, 255, 0.8); /* Slight transparency to blend with the background */
        padding: 50px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        width: 100%;
        max-width: 600px;
      }

      .splash-container h1 {
        font-size: 36px;
        margin-bottom: 20px;
        color: #333;
      }

      .splash-container p {
        font-size: 18px;
        color: #555;
        margin-bottom: 40px;
      }

      .splash-button {
        padding: 15px 25px;
        background-color: #2e7d32;
        color: white;
        font-size: 18px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        text-decoration: none;
      }

      .splash-button:hover {
        background-color: #fdf6e3;
      }

  body
    .splash-container
      h1 Welcome to Nom Nom
      p Discover and share delicious recipes with the world.
      a.splash-button(href='/login') Get Started
