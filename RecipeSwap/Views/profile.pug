doctype html
html
  head
    title User Profile - #{user.first_name} #{user.last_name}
    style.
      body {
        font-family: Helvetica, Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: rgb(230, 182, 154);
      }
      header {
        background-color: #333;
        color: white;
        padding: 5px;
        text-align: center;
      }
      .profile-container {
        max-width: 800px;
        margin: 30px auto;
        padding: 30px;
        background-color: rgb(255, 255, 255);
        box-shadow: 0 0 20px rgb(212, 99, 188);
        border-radius: 25px;
      }
      .profile-header {
        text-align: center;
      }
      .profile-header img {
        border-radius: 50%;
        border: 5px solid rgb(90, 90, 90);
        width: 150px;
        height: 150px;
      }
      .profile-header h1 {
        margin: 10px 0;
      }
      .profile-details {
        margin-top: 20px;
      }
      .profile-details h2 {
        color: rgb(0, 0, 0);
        font-size: 22px;
      }
      .profile-details p {
        color: rgb(0, 0, 0);
      }
      .profile-details ul {
        list-style: none;
        padding-left: 0;
      }
      .profile-details li {
        margin-bottom: 15px;
        line-height: 1.6;
      }
      .star-rating {
        color: gold;
        font-size: 20px;
      }
      .recipe {
        background-color: #f9f9f9;
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 15px;
      }
      .recipe h3 {
        margin: 0;
        font-size: 18px;
        font-weight: bold;
      }
      .recipe p {
        margin: 5px 0;
      }

  body
    header
      h1 User Profile: #{user.first_name} #{user.last_name}

    .profile-container
      .profile-header
        img(src="/profile%20image.jpg", alt="Profile Picture")
        h1 #{user.first_name} #{user.last_name}
        p Email: #{user.email}
        p Age: #{user.age}

      .profile-details
        h2 Posts
        p #{user.first_name}'s uploaded recipes:
        ul
          if user_recipes.length
            each recipe in user_recipes
              li.recipe
                h3 #{recipe.name}
                p Description: #{recipe.description || 'Add recipe description here'}
          else
            li No recipes posted.

        h2 Reviews
        p #{user.first_name}'s reviews:
        ul
          if user_reviews.length
            each review in user_reviews
              li
                .star-rating
                  span= '★'.repeat(review.rating)
                  span= '☆'.repeat(5 - review.rating)
                p #{review.comment}
          else
            li No reviews submitted.
