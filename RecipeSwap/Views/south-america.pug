extends secondlayout.pug

block content
  // ========================
  // HERO SECTION
  // ========================
  header.hero
    .hero-overlay
      .hero-content
        h1 South American Cuisine
        p Explore the flavorful dishes from South America.

  // ========================
  // FILTER SECTION
  // ========================
  section.filter-section.container
    h2 Filter Recipes
    form#filter-form(method="GET" action="/south-america") 
      select#category-filter(name="dietary_category")
        option(value="") All Categories
        option(value="Vegan" selected=(selectedCategory === 'Vegan' ? 'selected' : '')) Vegan
        option(value="Halal" selected=(selectedCategory === 'Halal' ? 'selected' : '')) Halal
        option(value="Gluten-Free" selected=(selectedCategory === 'Gluten-Free' ? 'selected' : '')) Gluten-Free
        option(value="Dairy-Free" selected=(selectedCategory === 'Dairy-Free' ? 'selected' : '')) Dairy-Free
        option(value="Nut-Free" selected=(selectedCategory === 'Nut-Free' ? 'selected' : '')) Nut-Free
      button.btn.btn-orange(type="submit") Apply Filter

  // ========================
  // RECIPE LISTINGS
  // ========================
  section.container
    h2 Popular South American Cuisine Dishes
    #recipe-list.recipe-grid
      if recipes && recipes.length > 0
        each recipe in recipes
          .recipe-card
            img(src=`/images/${recipe.image_url || 'default.jpg'}`, alt=recipe.name)
            h3= recipe.name
            p Category: #{recipe.category_name}
            a.btn.btn-red(href=`/recipes/${recipe.recipe_id}`) View Recipe
      else
        p No recipes found in this category.

  // ========================
  // FOOTER
  // ========================
  footer
    .container
      p &copy; 2025 Recipe Swap | South American Cuisine
