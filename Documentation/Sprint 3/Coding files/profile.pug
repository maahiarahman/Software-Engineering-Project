doctype html
html
  head
    title User Profile - #{user.first_name} #{user.last_name}
    style.
      body {
        font-family: Helvetica;
        margin: 0;
        padding: 0;
        background-color:rgb(230, 182, 154);
      }
      header {
        background-color: #333;
        color: white;
        padding: 5px;
        text-align: center;
      }
      header h1 {
        font-size: 20px;
      }
      .profile-container {
        max-width: 800px;
        margin: 30px auto;
        padding: 30px;
        background-color: rgb(255, 255, 255);
        box-shadow: 0 0 20px rgb(212, 99, 188);
        border-radius: 25px;
      }
      .profile-header {
        text-align: center;
      }
      .profile-header img {
        border-radius: 50%;
        border: 5px solid rgb(90, 90, 90);
        width: 150px;
        height: 150px;
      }
      .profile-header h1 {
        margin: 10px 0;
      }
      .profile-details {
        margin-top: 10px;
      }
      .profile-details h2 {
        color:rgb(0, 0, 0);
      }
      .profile-details p {
        color:rgb(0, 0, 0);
      }
      .profile-details ul {
        list-style: none;
      }

      .profile-details li {
        display: inline;
      }


      .profile-details li:last-child{padding-right:0;}
      .profile-details li:before{content:'\00B7';padding-right:5px;}


  body
    header
      h1 User Profile: #{user.first_name} #{user.last_name}
    
    .profile-container
      .profile-header
        img(src="/vecteezy_default-profile-account-unknown-icon-black-silhouette_20765399.jpg", alt="People Vectors by Vecteezy")
        h1 #{user.first_name} #{user.last_name}
        p Email: #{user.email}
        p Age: #{user.age}
        

      .profile-details
        h2 Posts
        p #{user.first_name}'s uploaded recipes:
    

        ul
          each recipe in user_recipes
            li #{recipe}  


        p #{user.first_name}'s reviews:
        
        ul
          each review in user_reviews
            li #{review}  
